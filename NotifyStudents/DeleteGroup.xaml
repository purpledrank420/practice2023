<Window x:Class="NotifyStudents.DeleteGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotifyStudents"
        mc:Ignorable="d"
        Title="DeleteGroup" Height="150" Width="220">
    <Grid>
        <TextBlock Text="Введіть группу, яку хочете видалити" Margin="10 10 10 110" FontSize="12"/>
        <TextBox x:Name="DeleteTextBox" Margin="10 40 10 70" TextWrapping="Wrap"/>
        <Button x:Name="DeleteCommandButton" Margin="10 90 10 10" Content="OK" Click="DeleteCommandButton_Click"/>
    </Grid>
</Window>

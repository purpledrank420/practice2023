<Window x:Class="NotifyStudents.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotifyStudents"
        mc:Ignorable="d"
        Title="AddStudent" Height="327" Width="569">
    <Grid Margin="0,0,0,-6" Background="DarkMagenta">
        <Label x:Name="NameSurnameLabel" Content="Enter a student name and surname" Margin="10,10,10,247" FontSize="20"/>
        <Label x:Name="EmailLabel" Content="Enter a student's email" FontSize="20" Margin="10,77,10,182"/>
        <Label x:Name="Group" Content="Enter a number of the group" FontSize="20" Margin="10,145,10,99"/>
        <TextBox x:Name="NameSurnameTextBox" Margin="10,47,10,210" FontSize="20"/>
        <TextBox x:Name="EmailTextBox" FontSize="20" Margin="10,113,10,145" />
        <TextBox x:Name="GroupTextBox" FontSize="20"  Margin="10,187,10,70"/>
        <Button x:Name="AddStudButton" Content="Add Student" Margin="10,240,10,10" Background="Aqua" Click="AddStudButton_Click"/>
    </Grid>
</Window>

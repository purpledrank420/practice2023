<Window x:Class="NotifyStudents.AddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotifyStudents"
        mc:Ignorable="d"
        Title="AddGroup" Height="150" Width="200">
    <Grid>
        <TextBlock Text="Введіть группу, яку хочете додати" Margin="5,10,10,81" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="AddTextBox" Margin="10,0,10,0" TextWrapping="Wrap" VerticalAlignment="Center" Height="32"/>
        <Button x:Name="AddCommandButton" Margin="10,74,10,0" Content="OK" VerticalAlignment="Top" Click="AddCommandButton_Click" Height="33"/>
    </Grid>
</Window>
